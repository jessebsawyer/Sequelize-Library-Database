extends layout.pug

block content

  h1 Books
  p
    a.button(href='/books/new') Create New Book
    .wrap
      form(method='get' action='/books/search')
        .search
          input.searchTerm(type='text' name='search' placeholder='What are you looking for?')
          button.searchButton(type='submit')
            i.fa.fa-search
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
    each val in book
      tr
        td 
          a(href=`/books/${val.id}`)= val.title
        td= val.author
        td= val.genre
        td= val.year
      

