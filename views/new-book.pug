doctype html
head
  title New Book
  link(rel='stylesheet' href='/static/stylesheets/style.css')
h1 New Book
form(method='post' action='/books/new')
  if errors
    h2.error Ooops!
    ul.error
      each error in errors
        li= error.text
  p
    label(for='title') Title
    input#title(name='title' type='text' value= title)
  p
    label(for='author') Author
    input#author(name='author' type='text' value= author)
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text' value= genre)
  p
    label(for='year') Year
    input#year(name='year' type='number' value= year)
  p
    input(type='submit' value='Create New Book')
  p
    a.button(href='/books') Cancel